<%= form_with(model: intern, local: true) do |form| %>
  <% if intern.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(intern.errors.count, "error") %> prohibited this intern from being saved:</h2>

      <ul>
      <% intern.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  

  <div class="field">
    <%= form.label :name,"Full Name:" %>
      <br>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :email, "Email:" %>
      <br>
    <%= form.text_field :email %>
  </div>

  <div class="field">
    <%= form.label :school, "School:" %>
      <br>
    <%= form.text_field :school %>
  </div>

  <div class="dropdown">

    <%= form.label "Education Level" %>

    <%= form.radio_button :education, 'Freshman' %>
    <%= form.label :Freshman %>

    <%= form.radio_button :education, 'Sophomore' %>
    <%= form.label :Sophomore %>

    <%= form.radio_button :education, 'Junior' %>
    <%= form.label :Junior %>

    <%= form.radio_button :education, 'Senior' %>
    <%= form.label :Senior %>

    <%= form.radio_button :education, 'Graduate' %>
    <%= form.label :Graduate %>
    
  </div>

  <br>

  <div id="skills">
  
      <%= form.label 'Skills' %>:
      
      <%= form.check_box :html %>
      <%= form.label :HTML %>
      
      <%= form.check_box :javascript %>
      <%= form.label :JavaScript %>
    
      <%= form.check_box :java %>
      <%= form.label :Java %>

      <%= form.check_box :database %>
      <%= form.label :Database %>

      <%= form.check_box :ai %>
      <%= form.label :AI %>    

  </div>

  <br>

  <div class="field">
    <%= form.label :hours, "Hours Available" %>
    <%= form.select :hours, (8..40) %>
  </div>
  
  <div class="field">
    <%= form.label :resume,"Upload a Resume:" %>
    <%= form.file_field :resume %>
  </div>
  
  <div class="actions">
    <%= form.submit"Save" %>
  </div>

  </div>
<% end %>