    <%= form.radio_button :education, 'Junior' %>
    <%= form.label :Junior %>

    <%= form.radio_button :education, 'Senior' %>
    <%= form.label :Senior %>

    <%= form.radio_button :education, 'Graduate' %>
    <%= form.label :Graduate %>
  </div>
  </div>

  <div id="skills">
  
      <%= form.label 'Skills' %>:
