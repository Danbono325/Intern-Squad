  <% end %>
  
  <div class="py-4">

  <div class="field">
    <%= form.label "Full Name:" %>
    <div class="pr-3">
    <%= form.text_field :name %>
    </div>
  </div>

  <div class="field">
    <%= form.label "Email:" %>
    <div class="pr-3">
    <%= form.text_field :email %>
    </div>
  </div>

  <div class="field">
    <%= form.label "School:" %>
